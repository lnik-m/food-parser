{
  "name": "food-parser-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "next-lint": "next lint",
    "lint": "eslint --fix --ext .js,.jsx .",
    "stylelint": "stylelint \"**/*.scss\" --fix"
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals"
    ],
    "rules": {
      "semi": "error",
      "quotes": [
        "error",
        "single"
      ],
      "indent": [
        "error",
        4,
        {
          "ignoredNodes": [
            "TemplateLiteral"
          ]
        }
      ],
      "import/no-anonymous-default-export": "off",
      "jest/valid-expect": "off",
      "testing-library/render-result-naming-convention": "off",
      "comma-dangle": [
        "error",
        {
          "arrays": "always",
          "objects": "always",
          "imports": "never",
          "exports": "never",
          "functions": "never"
        }
      ],
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "no-unused-expressions": "warn",
      "no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "dependencies": {
    "next": "12.3.1",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "eslint-config-next": "12.3.1",
    "prettier": "^2.7.1",
    "sass": "^1.55.0",
    "scss": "^0.2.4",
    "stylelint": "^14.14.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-scss": "^6.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-order-config-standard": "^0.1.3"
  },
  "prettier": {
    "trailingComma": "none",
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "printWidth": 80
  }
}
